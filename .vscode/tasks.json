{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "build"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "npm test",
      "group": "test"
    },
    {
      "label": "test:watch",
      "type": "shell",
      "command": "npm run test:watch",
      "group": "test",
      "isBackground": true
    },
    {
      "label": "debug-run",
      "type": "shell",
      "command": "npm run debug",
      "group": "none"
    }
  ]
}